{
  "name": "fridgewise-backend",
  "version": "1.0.0",
  "description": "FridgeWise backend API server",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "db:optimize": "node scripts/create-indexes.js",
    "db:indexes": "node scripts/create-indexes.js",
    "cache:clear": "node -e \"const redis = require('redis'); const client = redis.createClient(); client.flushall().then(() => { console.log('Cache cleared'); client.quit(); });\"",
    "cache:test": "node scripts/test-cache.js",
    "performance:test": "npm run db:optimize && npm run cache:test"
  },
  "keywords": [
    "recipe",
    "ai",
    "food",
    "ingredients",
    "nodejs",
    "mongodb"
  ],
  "author": "FridgeWise Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^5.8.2",
    "redis": "^4.6.10",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
